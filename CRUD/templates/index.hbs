        }

        .service-card:hover {
            border-color: var(--primary-color);
            background: rgba(0, 102, 255, 0.05);
        }

        .service-icon {
            font-size: 2.5rem;
            color: var(--secondary-color);
            margin-bottom: 1rem;
        }

        .service-card h3 {
            color: var(--secondary-color);
