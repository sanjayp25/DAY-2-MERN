            transform: translateY(-10px);
            border-color: var(--primary-color);
            box-shadow: 0 15px 40px rgba(0, 212, 255, 0.2);
        }

        .project-card h3 {
            color: var(--secondary-color);
            margin-bottom: 0.75rem;
        }

        .project-desc {
            flex-grow: 1;
            margin-bottom: 1rem;
        }

        .project-tech {
