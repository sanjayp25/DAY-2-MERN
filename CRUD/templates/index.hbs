        /* Footer */
        footer {
            background: rgba(15, 20, 25, 0.9);
            border-top: 2px solid var(--secondary-color);
            padding: 2rem;
            text-align: center;
            color: var(--text-light);
            margin-top: 3rem;
        }

        /* CTA Button */
