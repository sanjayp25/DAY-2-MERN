<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Your Stunning Portfolio</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #667eea;
            --primary-dark: #764ba2;
            --secondary: #f093fb;
            --accent: #00d4ff;
            --dark: #0f1419;
            --light: #fff;
            --gray: #e0e0e0;
            --gray-dark: #666;
        }

        body {
            font-family: 'Poppins', 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            overflow-x: hidden;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Header */
        .header {
            background: rgba(255, 255, 255, 0.95);
            padding: 30px 40px;
            border-radius: 20px;
            margin-bottom: 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            backdrop-filter: blur(10px);
        }

        .header-title {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .header-title i {
            font-size: 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .header-title h1 {
            color: #0f1419;
            font-size: 32px;
            font-weight: 700;
        }

        .header-subtitle {
            color: #666;
            font-size: 14px;
            margin-top: 5px;
        }

        .header-action {
            display: flex;
            gap: 15px;
        }

        .btn-header {
            padding: 12px 25px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-back {
            background: #f0f0f0;
            color: #333;
        }

        .btn-back:hover {
            background: #e0e0e0;
            transform: translateX(-3px);
        }

        /* Main Grid */
        .main-grid {
            display: grid;
            grid-template-columns: 400px 1fr;
            gap: 40px;
            margin-bottom: 40px;
        }

        /* Avatar Card */
        .avatar-card {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            height: fit-content;
            position: sticky;
            top: 20px;
        }

        .avatar-showcase {
            position: relative;
            margin-bottom: 30px;
        }

        .avatar-display {
            width: 200px;
            height: 200px;
            margin: 0 auto 20px;
            border-radius: 50%;
            overflow: hidden;
            border: 5px solid;
            border-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%) 1;
            box-shadow: 0 20px 50px rgba(102, 126, 234, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-size: 80px;
            color: white;
            position: relative;
            transition: transform 0.3s;
        }

        .avatar-display:hover {
            transform: scale(1.05);
        }

        .avatar-display img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .upload-badge {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
            transition: all 0.3s;
        }

        .upload-badge:hover {
            transform: scale(1.1);
            box-shadow: 0 15px 40px rgba(102, 126, 234, 0.6);
        }

        #photoInput {
            display: none;
        }

        .upload-text {
            text-align: center;
            color: #999;
            font-size: 12px;
            line-height: 1.6;
            margin-top: 20px;
        }

        .upload-text strong {
            color: #667eea;
        }

        /* Form Card */
        .form-card {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        }

        .form-section {
            margin-bottom: 40px;
        }

        .form-section:last-of-type {
            margin-bottom: 0;
        }

        .section-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }

        .section-header i {
            font-size: 24px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .section-header h3 {
            color: #0f1419;
            font-size: 18px;
            font-weight: 700;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px;
        }

        .form-row.full {
            grid-template-columns: 1fr;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .form-group label {
            color: #333;
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-group input,
        .form-group textarea {
            padding: 15px 18px;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-size: 15px;
            font-family: 'Poppins', sans-serif;
            transition: all 0.3s;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            background: #fafbff;
        }

        .form-group textarea {
            resize: vertical;
            min-height: 120px;
        }

        /* Social Links */
        .social-inputs {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .social-input-group {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            background: #f8f9ff;
            border-radius: 12px;
            border: 2px solid #e0e0e0;
            transition: all 0.3s;
        }

        .social-input-group:focus-within {
            background: #f0f2ff;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .social-input-group i {
            color: #667eea;
            width: 25px;
            font-size: 18px;
        }

        .social-input-group input {
            flex: 1;
            border: none;
            background: transparent;
            font-size: 14px;
            padding: 0;
            outline: none;
        }

        /* Skills */
        .skill-input-wrapper {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .skill-input-wrapper input {
            flex: 1;
        }

        .skill-input-wrapper button {
            padding: 12px 25px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
        }

        .skill-input-wrapper button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        }

        .skill-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            padding: 15px;
            background: #f8f9ff;
            border-radius: 12px;
            min-height: 50px;
        }

        .skill-tag {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 10px 15px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: scale(0.8);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .skill-tag .remove {
            cursor: pointer;
            font-weight: bold;
            opacity: 0.8;
            transition: opacity 0.3s;
        }

        .skill-tag .remove:hover {
            opacity: 1;
        }

        /* Color Picker */
        .color-grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 15px;
        }

        .color-box {
            width: 80px;
            height: 80px;
            border-radius: 15px;
            cursor: pointer;
            border: 3px solid transparent;
            transition: all 0.3s;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .color-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .color-box.active {
            border-color: #0f1419;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.3);
            transform: scale(1.05);
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 15px;
            margin-top: 50px;
            padding-top: 30px;
            border-top: 2px solid #f0f0f0;
        }

        .btn {
            flex: 1;
            padding: 16px 30px;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 1px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .btn-save {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 15px 40px rgba(102, 126, 234, 0.3);
        }

        .btn-save:hover {
            transform: translateY(-3px);
            box-shadow: 0 20px 50px rgba(102, 126, 234, 0.5);
        }

        .btn-cancel {
            background: #f0f0f0;
            color: #333;
            font-weight: 600;
        }

        .btn-cancel:hover {
            background: #e0e0e0;
            transform: translateY(-2px);
        }

        /* Preview Card */
        .preview-section {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            margin-top: 40px;
        }

        .preview-section h3 {
            color: #0f1419;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 20px;
        }

        .preview-section h3 i {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .preview-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 20px;
            padding: 40px;
            color: white;
            display: flex;
            gap: 30px;
            align-items: center;
        }

        .preview-avatar {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 4px solid rgba(255, 255, 255, 0.3);
            object-fit: cover;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        }

        .preview-info h2 {
            font-size: 28px;
            margin-bottom: 8px;
            font-weight: 700;
        }

        .preview-info .title {
            font-size: 15px;
            opacity: 0.9;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .preview-info .location {
            font-size: 14px;
            opacity: 0.85;
            margin-bottom: 15px;
        }

        .preview-badges {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .badge {
            background: rgba(255, 255, 255, 0.2);
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            backdrop-filter: blur(10px);
        }

        .message {
            padding: 18px 20px;
            border-radius: 12px;
            margin-bottom: 25px;
            display: none;
            animation: slideDown 0.3s ease;
        }

        .message.success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
            display: block;
        }

        .message.error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            display: block;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .main-grid {
                grid-template-columns: 1fr;
            }

            .avatar-card {
                position: relative;
                top: 0;
            }

            .color-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }

        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                text-align: center;
                gap: 20px;
            }

            .form-row {
                grid-template-columns: 1fr;
            }

            .color-grid {
                grid-template-columns: repeat(3, 1fr);
            }

            .preview-card {
                flex-direction: column;
                text-align: center;
            }

            .action-buttons {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <div>
                <div class="header-title">
                    <i class="fas fa-sparkles"></i>
                    <div>
                        <h1>Design Your Portfolio</h1>
                        <p class="header-subtitle">Create a stunning and professional online presence</p>
                    </div>
                </div>
            </div>
            <div class="header-action">
                <a href="/dashboard" class="btn-header btn-back">
                    <i class="fas fa-arrow-left"></i> Dashboard
                </a>
            </div>
        </div>

        <div id="message"></div>

        <!-- Main Content -->
        <div class="main-grid">
            <!-- Avatar Section -->
            <div class="avatar-card">
                <div class="avatar-showcase">
                    <div class="avatar-display" id="avatarDisplay">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="upload-badge" onclick="document.getElementById('photoInput').click()">
                        <i class="fas fa-camera"></i>
                    </div>
                    <input type="file" id="photoInput" accept="image/*">
                </div>
                <div class="upload-text">
                    Click the <strong>camera icon</strong> to upload your profile photo.<br>
                    Supports JPG, PNG, GIF • Max 5MB
                </div>
            </div>

            <!-- Form Section -->
            <div class="form-card">
                <form id="profileForm">
                    <!-- Basic Info -->
                    <div class="form-section">
                        <div class="section-header">
                            <i class="fas fa-id-card"></i>
                            <h3>Personal Information</h3>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Full Name *</label>
                                <input type="text" id="fullName" placeholder="Sanjay Patel" required>
                            </div>
                            <div class="form-group">
                                <label>Professional Title</label>
                                <input type="text" id="jobTitle" placeholder="Full Stack Developer">
                            </div>
                        </div>
                    </div>

                    <!-- Bio -->
                    <div class="form-section">
                        <div class="section-header">
                            <i class="fas fa-pen-fancy"></i>
                            <h3>About You</h3>
                        </div>
                        <div class="form-group">
                            <label>Bio / Description</label>
                            <textarea id="bio" placeholder="Share your story, expertise, and what makes you unique..."></textarea>
                        </div>
                    </div>

                    <!-- Contact Info -->
                    <div class="form-section">
                        <div class="section-header">
                            <i class="fas fa-globe"></i>
                            <h3>Contact & Location</h3>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Location</label>
                                <input type="text" id="location" placeholder="City, Country">
                            </div>
                            <div class="form-group">
                                <label>Website</label>
                                <input type="url" id="website" placeholder="https://yourwebsite.com">
                            </div>
                        </div>
                    </div>

                    <!-- Social Links -->
                    <div class="form-section">
                        <div class="section-header">
                            <i class="fas fa-share-nodes"></i>
                            <h3>Social Media</h3>
                        </div>
                        <div class="social-inputs">
                            <div class="social-input-group">
                                <i class="fab fa-github"></i>
                                <input type="text" id="github" placeholder="GitHub username">
                            </div>
                            <div class="social-input-group">
                                <i class="fab fa-linkedin"></i>
                                <input type="text" id="linkedin" placeholder="LinkedIn URL">
                            </div>
                            <div class="social-input-group">
                                <i class="fab fa-twitter"></i>
                                <input type="text" id="twitter" placeholder="Twitter handle">
                            </div>
                        </div>
                    </div>

                    <!-- Skills -->
                    <div class="form-section">
                        <div class="section-header">
                            <i class="fas fa-code"></i>
                            <h3>Skills & Expertise</h3>
                        </div>
                        <div class="skill-input-wrapper">
                            <input type="text" id="skillInput" placeholder="e.g. JavaScript, React, Node.js, MongoDB">
                            <button type="button" onclick="addSkill()">
                                <i class="fas fa-plus"></i> Add
                            </button>
                        </div>
                        <div class="skill-tags" id="skillTags"></div>
                    </div>

                    <!-- Theme Color -->
                    <div class="form-section">
                        <div class="section-header">
                            <i class="fas fa-palette"></i>
                            <h3>Portfolio Theme</h3>
                        </div>
                        <div class="color-grid">
                            <div class="color-box active" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);" onclick="selectColor(this)"></div>
                            <div class="color-box" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);" onclick="selectColor(this)"></div>
                            <div class="color-box" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);" onclick="selectColor(this)"></div>
                            <div class="color-box" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);" onclick="selectColor(this)"></div>
                            <div class="color-box" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);" onclick="selectColor(this)"></div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <button type="submit" class="btn btn-save">
                            <i class="fas fa-check-circle"></i> Save Portfolio
                        </button>
                        <button type="button" class="btn btn-cancel" onclick="window.location.href='/dashboard'">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Live Preview -->
        <div class="preview-section">
            <h3><i class="fas fa-eye"></i> Live Preview</h3>
            <div class="preview-card">
                <img id="previewAvatar" src="https://via.placeholder.com/150?text=Avatar" alt="Avatar" class="preview-avatar">
                <div class="preview-info">
                    <h2 id="previewName">Your Name</h2>
                    <div class="title" id="previewTitle">Professional Title</div>
                    <div class="location"><i class="fas fa-map-marker-alt"></i> <span id="previewLocation">City, Country</span></div>
                    <div class="preview-badges" id="previewSkills"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const photoInput = document.getElementById('photoInput');
        const skillInput = document.getElementById('skillInput');
        const skillTags = document.getElementById('skillTags');
        const profileForm = document.getElementById('profileForm');

        // Photo upload
        photoInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const img = event.target.result;
                    document.getElementById('avatarDisplay').innerHTML = `<img src="${img}" style="width: 100%; height: 100%; object-fit: cover;">`;
                    document.getElementById('previewAvatar').src = img;
                };
                reader.readAsDataURL(file);
            }
        });

        // Real-time preview
        document.getElementById('fullName').addEventListener('input', function() {
            document.getElementById('previewName').textContent = this.value || 'Your Name';
        });

        document.getElementById('jobTitle').addEventListener('input', function() {
            document.getElementById('previewTitle').textContent = this.value || 'Professional Title';
        });

        document.getElementById('location').addEventListener('input', function() {
            document.getElementById('previewLocation').textContent = this.value || 'City, Country';
        });

        // Skill management
        function addSkill() {
            const skill = skillInput.value.trim();
            if (skill) {
                const tag = document.createElement('span');
                tag.className = 'skill-tag';
                tag.innerHTML = `${skill} <span class="remove" onclick="this.parentElement.remove(); updatePreview();">×</span>`;
                skillTags.appendChild(tag);
                skillInput.value = '';
                updatePreview();
            }
        }

        skillInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                addSkill();
            }
        });

        function updatePreview() {
            const skills = Array.from(skillTags.querySelectorAll('.skill-tag'))
                .map(tag => tag.textContent.replace('×', '').trim());
            document.getElementById('previewSkills').innerHTML = skills
                .map(skill => `<span class="badge">${skill}</span>`)
                .join('');
        }

        function selectColor(element) {
            document.querySelectorAll('.color-box').forEach(el => el.classList.remove('active'));
            element.classList.add('active');
        }

        function showMessage(text, type) {
            const msg = document.getElementById('message');
            msg.textContent = text;
            msg.className = `message ${type}`;
            setTimeout(() => msg.className = 'message', 3000);
        }

        // Form submission
        profileForm.addEventListener('submit', async function(e) {
            e.preventDefault();

            const formData = new FormData();
            formData.append('name', document.getElementById('fullName').value);
            formData.append('title', document.getElementById('jobTitle').value);
            formData.append('bio', document.getElementById('bio').value);
            formData.append('location', document.getElementById('location').value);
            formData.append('website', document.getElementById('website').value);
            formData.append('github', document.getElementById('github').value);
            formData.append('linkedin', document.getElementById('linkedin').value);
            
            const skills = Array.from(skillTags.querySelectorAll('.skill-tag'))
                .map(tag => tag.textContent.replace('×', '').trim())
                .join(',');
            formData.append('skills', skills);

            if (photoInput.files[0]) {
                formData.append('avatar', photoInput.files[0]);
            }

            try {
                const response = await fetch(window.location.pathname, {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    showMessage('✓ Portfolio updated successfully! Redirecting...', 'success');
                    setTimeout(() => window.location.href = '/dashboard', 1500);
                } else {
                    showMessage('Error updating portfolio', 'error');
                }
            } catch (error) {
                showMessage('Error: ' + error.message, 'error');
            }
        });
    </script>
</body>
